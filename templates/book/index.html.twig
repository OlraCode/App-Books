{% extends 'base.html.twig' %}

{% block title %}Lista de Livros{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_book_new') }}" class="btn btn-primary my-3">Adicionar Livro</a>
{% endif %}

<div class="mt-3 d-flex">
    <ul class="d-flex justify-content-around flex-wrap" style="width: 100%">
        {% for book in books %}
            <li class="d-flex flex-column justify-content-between align-items-center border p-3 m-3" style="width: 250px; height: 400px">
                    <h3 class="mb-auto text-center">{{ book.title }}</h3>
                    <img src="{{ asset('upload/coverImages/' ~ book.coverPath) }}" alt="Capa" style="max-height: 220px" class="img-thumbnail">
                    <a href="{{ path('app_book_show', {id: book.id}) }}" class="btn btn-secondary mt-4">Mais detalhes</a>
            </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}
