{% extends 'base.html.twig' %}

{% block title %}Lista de Livros{% endblock %}

{% block body %}

<a href="{{ path('app_book_new') }}" class="btn btn-primary my-3">Adicionar Livro</a>

<div class="mt-3 d-flex">
    <ul class="d-flex justify-content-around flex-wrap" style="width: 100%">
        {% for book in books %}
            <li class="d-flex justify-content-between align-items-center border p-2 m-3" style="width: 250px">
                <div class="d-flex flex-column align-items-center mx-5">
                    <h3 class="mb-2 text-center">{{ book.title }}</h3>
                    <img src="{{ asset('upload/coverImages/' ~ book.coverPath) }}" alt="Capa" style="max-width: 150px" class="img-thumbnail">
                    <a href="{{ path('app_book_show', {id: book.id}) }}" class="btn btn-secondary mt-3">Mais detalhes</a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}
