{% extends 'base.html.twig' %}

{% block title %}Lista de Livros{% endblock %}

{% block body %}

<a href="{{ path('app_book_new') }}" class="btn btn-primary my-3">Adicionar Livro</a>

<ul class="list-group">
    {% for book in books %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <h3 class="m-0">{{ book.title }}</h3>
            <a href="{{ path('app_book_show', {id: book.id}) }}" class="btn btn-secondary">Mais detalhes</a>
        </li>
    {% endfor %}
</ul>

{% endblock %}
