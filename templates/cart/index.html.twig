{% extends 'base.html.twig' %}

{% block title %}Carrinho{% endblock %}

{% block body %}

<ul class="my-4 list-group">
    {% for item in items %}
        <li class="list-group-item d-flex align-items-center justify-content-between">
            <div class="m-2">
                <a href="{{ path("app_book_show", {id: item.book.id}) }}" class="fs-5">{{ item.book.title }}</a>
                <p class="fs-5 m-0">{{  item.book.formatPrice }}</p>
            </div>

            <form action="{{ path('app_cart_remove', {id: item.id}) }}" method="POST">
                <button class="btn btn-danger">Remover do carrinho</button>
            </form>
        </li>
    {% endfor %}
</ul>

<h3>Total: {{ total }}</h3>
<div class="mt-3">
    <a href="#" class="btn btn-success me-2">Realizar compra</a>
    <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Voltar</a>
</div>

{% endblock %}

